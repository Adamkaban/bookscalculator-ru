---
// Компонент для технических страниц с мета-тегами noindex
export interface Props {
  title?: string;
  description?: string;
  keywords?: string;
  image?: string;
  type?: 'website' | 'article';
  publishedTime?: string;
  modifiedTime?: string;
  author?: string;
}

const {
  title = "Калькулятор времени чтения книг",
  description = "Узнайте, сколько книг вы сможете прочитать за месяц, год или десятилетие с нашим удобным калькулятором времени чтения",
  keywords = "калькулятор чтения, время чтения книг, скорость чтения, книги в год, планирование чтения",
  image = "/images/hero-section.webp",
  type = 'website',
  publishedTime,
  modifiedTime,
  author
} = Astro.props;

// Fallback для пустого тайтла
const finalTitle = title || "Калькулятор времени чтения книг";

// Канонический URL всегда должен указывать на основной домен сайта
const canonicalOrigin = Astro.site || 'https://bookscalculator.ru';
const canonicalURL = new URL(Astro.url.pathname, canonicalOrigin);
---

<!-- Основные мета-теги -->
<title>{finalTitle}</title>
<meta name="description" content={description} />
<meta name="keywords" content={keywords} />
<meta name="author" content={author || "BooksCalculator.ru"} />

<!-- Запрещаем индексацию технических страниц -->
<meta name="robots" content="noindex, nofollow, noarchive, nosnippet, noimageindex" />
<meta name="googlebot" content="noindex, nofollow, noarchive, nosnippet, noimageindex" />
<meta name="bingbot" content="noindex, nofollow, noarchive, nosnippet, noimageindex" />
<meta name="yandex" content="noindex, nofollow" />

<!-- Канонический URL -->
<link rel="canonical" href={canonicalURL} />

<!-- Open Graph (для социальных сетей, но без индексации) -->
<meta property="og:title" content={finalTitle} />
<meta property="og:description" content={description} />
<meta property="og:type" content={type} />
<meta property="og:url" content={canonicalURL} />
<meta property="og:site_name" content="BookCalculator.ru" />
<meta property="og:image" content={`${canonicalOrigin}${image}`} />
<meta property="og:image:alt" content={finalTitle} />
<meta property="og:locale" content="ru_RU" />

<!-- Twitter Card (для социальных сетей, но без индексации) -->
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:title" content={finalTitle} />
<meta name="twitter:description" content={description} />
<meta name="twitter:image" content={`${canonicalOrigin}${image}`} />
<meta name="twitter:image:alt" content={finalTitle} />

<!-- Schema.org разметка -->
<script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": type === 'article' ? "Article" : "WebSite",
    "name": finalTitle,
    "description": description,
    "url": canonicalURL,
    "inLanguage": "ru-RU",
    "copyrightHolder": {
      "@type": "Organization",
      "name": "BooksCalculator.ru",
      "url": "https://bookscalculator.ru"
    },
    "publisher": {
      "@type": "Organization",
      "name": "BooksCalculator.ru",
      "logo": {
        "@type": "ImageObject",
        "url": "https://bookscalculator.ru/images/hero-section.webp"
      }
    },
    ...(author && {
      "author": {
        "@type": "Person",
        "name": author
      }
    }),
    ...(publishedTime && { "datePublished": publishedTime }),
    ...(modifiedTime && { "dateModified": modifiedTime }),
    "mainEntityOfPage": {
      "@type": "WebPage",
      "@id": canonicalURL
    },
    "isPartOf": {
      "@type": "WebSite",
      "name": "BooksCalculator.ru",
      "url": "https://bookscalculator.ru"
    }
  }
</script>

<!-- Предзагрузка важных ресурсов -->
<link rel="preconnect" href="https://fonts.googleapis.com" />
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

<!-- Фавиконки -->
<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
<link rel="icon" type="image/png" sizes="32x32" href="/favicon.png" />
<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
<link rel="manifest" href="/site.webmanifest" />
<link rel="mask-icon" href="/safari-pinned-tab.svg" color="#3b82f6" />
<meta name="msapplication-TileColor" content="#3b82f6" />
<meta name="theme-color" content="#3b82f6" />
<meta name="application-name" content="BooksCalculator.ru" />