---
export interface Props {
  title?: string;
  subtitle?: string;
  image?: string;
  imageAlt?: string;
  height?: 'small' | 'medium' | 'large';
  fullWidth?: boolean;
}

const {
  title = "–ö–∞–ª—å–∫—É–ª—è—Ç–æ—Ä –≤—Ä–µ–º–µ–Ω–∏ —á—Ç–µ–Ω–∏—è –∫–Ω–∏–≥",
  subtitle = "–£–∑–Ω–∞–π—Ç–µ, —Å–∫–æ–ª—å–∫–æ –∫–Ω–∏–≥ –≤—ã —Å–º–æ–∂–µ—Ç–µ –ø—Ä–æ—á–∏—Ç–∞—Ç—å –∑–∞ –º–µ—Å—è—Ü, –≥–æ–¥ –∏–ª–∏ –¥–µ—Å—è—Ç–∏–ª–µ—Ç–∏–µ",
  image = "/images/hero-section.webp",
  imageAlt = "–ö–Ω–∏–≥–∏ –∏ —á—Ç–µ–Ω–∏–µ",
  height = 'medium',
  fullWidth = false
} = Astro.props;

const heightClasses = {
  small: 'min-h-[30vh] py-8',
  medium: 'min-h-[40vh] py-12 md:py-16',
  large: 'min-h-[60vh] py-16 md:py-24'
};
---

<section class="hero-section bg-gradient-to-br from-slate-50 to-blue-50">
  <div class="container mx-auto px-4">
    <div class={`flex flex-col ${height === 'small' ? 'md:flex-row md:items-center' : 'lg:flex-row lg:items-center'} justify-center gap-8 ${heightClasses[height]}`}>

      <!-- –¢–µ–∫—Å—Ç–æ–≤—ã–π –∫–æ–Ω—Ç–µ–Ω—Ç -->
      <div class="flex-1 text-center lg:text-left">
        <h1 class="text-3xl md:text-5xl lg:text-6xl font-bold text-slate-900 mb-4 leading-tight">
          {title}
        </h1>
        <p class="text-lg md:text-xl lg:text-2xl text-slate-600 mb-6 leading-relaxed">
          {subtitle}
        </p>
      </div>

      <!-- –ò–∑–æ–±—Ä–∞–∂–µ–Ω–∏–µ -->
      <div class={`flex-1 flex ${fullWidth ? 'w-full' : 'justify-center lg:justify-end'}`}>
        <div class={`relative ${fullWidth ? 'w-full' : 'max-w-md lg:max-w-lg'}`}>
          <img
            src={image}
            alt={imageAlt}
            class={`w-full h-auto object-cover ${fullWidth ? 'rounded-none' : 'rounded-lg shadow-lg'}`}
            loading="eager"
            width="1200"
            height="400"
          />

          <!-- –î–µ–∫–æ—Ä–∞—Ç–∏–≤–Ω—ã–µ —ç–ª–µ–º–µ–Ω—Ç—ã -->
          <div class="absolute -top-4 -right-4 text-4xl opacity-20">üìö</div>
