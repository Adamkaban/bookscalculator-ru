<script>
  // –ò–Ω—Ç–µ—Ä–∞–∫—Ç–∏–≤–Ω–∞—è —Ç–∞–±–ª–∏—Ü–∞ –≤—Ä–µ–º–µ–Ω–∏ —á—Ç–µ–Ω–∏—è
  class ReadingTimeCalculator {
    constructor() {
      this.currentPages = 100;
      this.currentSpeed = 250;
      this.init();
    }

    init() {
      this.bindEvents();
      this.updateResults();
    }

    bindEvents() {
      // –û–±—Ä–∞–±–æ—Ç—á–∏–∫–∏ –¥–ª—è –∫–Ω–æ–ø–æ–∫ –∫–æ–ª–∏—á–µ—Å—Ç–≤–∞ —Å—Ç—Ä–∞–Ω–∏—Ü
      document.querySelectorAll('.page-count-btn').forEach(btn => {
        btn.addEventListener('click', (e) => {
          this.currentPages = parseInt(e.target.dataset.pages);
          this.updateActiveButtons();
          this.updateResults();
        });
      });

      // –û–±—Ä–∞–±–æ—Ç—á–∏–∫–∏ –¥–ª—è —Ä–∞–¥–∏–æ-–∫–Ω–æ–ø–æ–∫ —Å–∫–æ—Ä–æ—Å—Ç–∏ —á—Ç–µ–Ω–∏—è
      document.querySelectorAll('input[name="reading-speed"]').forEach(radio => {
        radio.addEventListener('change', (e) => {
          this.currentSpeed = parseInt(e.target.value);
          this.updateResults();
        });
      });
    }

    updateActiveButtons() {
      // –û–±–Ω–æ–≤–ª—è–µ–º –∞–∫—Ç–∏–≤–Ω—ã–µ –∫–Ω–æ–ø–∫–∏ —Å—Ç—Ä–∞–Ω–∏—Ü
      document.querySelectorAll('.page-count-btn').forEach(btn => {
        const pages = parseInt(btn.dataset.pages);
        if (pages === this.currentPages) {
          btn.className = 'page-count-btn px-3 py-2 text-sm font-medium rounded-lg border-2 bg-blue-600 text-white border-blue-600';
        } else {
          btn.className = 'page-count-btn px-3 py-2 text-sm font-medium rounded-lg border-2 bg-white text-slate-700 border-slate-300 hover:border-blue-400 hover:bg-blue-50';
        }
      });
    }

    updateResults() {
      const totalWords = this.currentPages * 300; // –°—Ä–µ–¥–Ω–µ–µ –∫–æ–ª–∏—á–µ—Å—Ç–≤–æ —Å–ª–æ–≤ –Ω–∞ —Å—Ç—Ä–∞–Ω–∏—Ü–µ
      const minutes = Math.ceil(totalWords / this.currentSpeed);
      const hours = Math.floor(minutes / 60);
      const remainingMinutes = minutes % 60;
      const days = Math.ceil(hours / 8); // –ü—Ä–µ–¥–ø–æ–ª–∞–≥–∞–µ–º 8 —á–∞—Å–æ–≤ —á—Ç–µ–Ω–∏—è –≤ –¥–µ–Ω—å
      const weeks = Math.ceil(days / 7);

      // –ê–Ω–∏–º–∏—Ä—É–µ–º —Ä–µ–∑—É–ª—å—Ç–∞—Ç—ã
      this.animateNumber('minutes-result', minutes);
      this.animateNumber('hours-result', hours);
      this.animateNumber('days-result', days);
      this.animateNumber('weeks-result', weeks);
    }

    animateNumber(elementId, target) {
      const element = document.getElementById(elementId);
      if (!element) return;

      const start = parseInt(element.textContent) || 0;
      const duration = 500;
      const startTime = performance.now();

      const animate = (currentTime) => {
        const elapsed = currentTime - startTime;
        const progress = Math.min(elapsed / duration, 1);

        const current = Math.floor(start + (target - start) * this.easeOut(progress));
        element.textContent = current;

        if (progress < 1) {
          requestAnimationFrame(animate);
        }
      };

      requestAnimationFrame(animate);
    }

    easeOut(t) {
      return 1 - Math.pow(1 - t, 3);
    }
  }

  // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è –∫–∞–ª—å–∫—É–ª—è—Ç–æ—Ä–∞ –ø–æ—Å–ª–µ –∑–∞–≥—Ä—É–∑–∫–∏ —Å—Ç—Ä–∞–Ω–∏—Ü—ã
  document.addEventListener('DOMContentLoaded', () => {
    new ReadingTimeCalculator();
  });
</script>

