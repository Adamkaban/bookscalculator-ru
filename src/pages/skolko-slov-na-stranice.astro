<script>
  // –ò–Ω—Ç–µ—Ä–∞–∫—Ç–∏–≤–Ω–∞—è —Ç–∞–±–ª–∏—Ü–∞ —Å–ª–æ–≤ –Ω–∞ —Å—Ç—Ä–∞–Ω–∏—Ü–µ
  class WordsToPagesCalculator {
    constructor() {
      this.currentWordsPerPage = 350; // –ö–Ω–∏–∂–Ω—ã–π —Ñ–æ—Ä–º–∞—Ç –ø–æ —É–º–æ–ª—á–∞–Ω–∏—é
      this.init();
    }

    init() {
      this.bindEvents();
    }

    bindEvents() {
      // –û–±—Ä–∞–±–æ—Ç—á–∏–∫–∏ –¥–ª—è –∫–Ω–æ–ø–æ–∫ —Ñ–æ—Ä–º–∞—Ç–æ–≤
      document.querySelectorAll('.format-btn').forEach(btn => {
        btn.addEventListener('click', (e) => {
          this.currentWordsPerPage = parseInt(e.target.dataset.words);
          this.updateActiveFormat();
          this.calculatePages();
        });
      });

      // –û–±—Ä–∞–±–æ—Ç—á–∏–∫ –¥–ª—è –ø–æ–ª—è –≤–≤–æ–¥–∞ —Å–ª–æ–≤
      const totalWordsInput = document.getElementById('total-words');
      if (totalWordsInput) {
        totalWordsInput.addEventListener('input', (e) => {
          this.calculatePages();
        });
      }
    }

    updateActiveFormat() {
      document.querySelectorAll('.format-btn').forEach(btn => {
        const words = parseInt(btn.dataset.words);
        if (words === this.currentWordsPerPage) {
          btn.className = 'format-btn w-full text-left p-4 rounded-lg border-2 bg-green-600 text-white border-green-600';
        } else {
          btn.className = 'format-btn w-full text-left p-4 rounded-lg border-2 bg-white text-slate-700 border-slate-300 hover:border-green-400 hover:bg-green-50';
        }
      });
    }

    calculatePages() {
      const totalWordsInput = document.getElementById('total-words');
      const totalWords = parseInt(totalWordsInput?.value) || 0;

      if (totalWords <= 0) {
        this.animateNumber('pages-result', 0);
        this.animateNumber('books-result', 0);
        return;
      }

      const pages = Math.ceil(totalWords / this.currentWordsPerPage);
      const books = Math.ceil(pages / 300); // –ü—Ä–µ–¥–ø–æ–ª–∞–≥–∞–µ–º —Å—Ä–µ–¥–Ω—é—é –∫–Ω–∏–≥—É –≤ 300 —Å—Ç—Ä–∞–Ω–∏—Ü

      this.animateNumber('pages-result', pages);
      this.animateNumber('books-result', books);
    }

    animateNumber(elementId, target) {
      const element = document.getElementById(elementId);
      if (!element) return;

      const start = parseInt(element.textContent) || 0;
      const duration = 300;
      const startTime = performance.now();

      const animate = (currentTime) => {
        const elapsed = currentTime - startTime;
        const progress = Math.min(elapsed / duration, 1);

        const current = Math.floor(start + (target - start) * this.easeOut(progress));
        element.textContent = current;

        if (progress < 1) {
          requestAnimationFrame(animate);
        }
      };

      requestAnimationFrame(animate);
    }

    easeOut(t) {
      return 1 - Math.pow(1 - t, 2);
    }
  }

  // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è –∫–∞–ª—å–∫—É–ª—è—Ç–æ—Ä–∞ –ø–æ—Å–ª–µ –∑–∞–≥—Ä—É–∑–∫–∏ —Å—Ç—Ä–∞–Ω–∏—Ü—ã
  document.addEventListener('DOMContentLoaded', () => {
    new WordsToPagesCalculator();
  });
</script>

