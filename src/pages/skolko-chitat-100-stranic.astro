  class DynamicTitle {
    constructor() {
      this.titles = [
        '20 —Å—Ç—Ä–∞–Ω–∏—Ü?',
        '50 —Å—Ç—Ä–∞–Ω–∏—Ü?',
        '100 —Å—Ç—Ä–∞–Ω–∏—Ü?',
        '200 —Å—Ç—Ä–∞–Ω–∏—Ü?'
      ];
      this.currentIndex = 0;
      this.element = document.getElementById('dynamic-pages');
      this.isDeleting = false;
      this.typingSpeed = 150;
      this.deletingSpeed = 75;
      this.pauseTime = 2000;

      this.init();
    }

    init() {
      this.type();
    }

    async type() {
      const currentTitle = this.titles[this.currentIndex];

      if (this.isDeleting) {
        // –£–¥–∞–ª—è–µ–º —Ç–µ–∫—Å—Ç –ø–æ—Å–∏–º–≤–æ–ª—å–Ω–æ
        const currentText = this.element.textContent;
        this.element.textContent = currentText.substring(0, currentText.length - 1);

        if (this.element.textContent === '') {
          this.isDeleting = false;
          this.currentIndex = (this.currentIndex + 1) % this.titles.length;
          setTimeout(() => this.type(), 500);
        } else {
          setTimeout(() => this.type(), this.deletingSpeed);
        }
      } else {
        // –î–æ–±–∞–≤–ª—è–µ–º —Ç–µ–∫—Å—Ç –ø–æ—Å–∏–º–≤–æ–ª—å–Ω–æ
        const currentText = this.element.textContent;
        const nextChar = currentTitle.substring(0, currentText.length + 1);

        if (currentText.length < currentTitle.length) {
          this.element.textContent = nextChar;
          setTimeout(() => this.type(), this.typingSpeed);
        } else {
          // –¢–µ–∫—Å—Ç –Ω–∞–ø–µ—á–∞—Ç–∞–Ω –ø–æ–ª–Ω–æ—Å—Ç—å—é
          setTimeout(() => {
            this.isDeleting = true;
            this.type();
          }, this.pauseTime);
        }
      }
    }
  }

  // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è –∞–Ω–∏–º–∞—Ü–∏–∏ –∑–∞–≥–æ–ª–æ–≤–∫–∞
  document.addEventListener('DOMContentLoaded', () => {
